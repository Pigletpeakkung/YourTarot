{
  "name": "pegearts-portfolio",
  "version": "2.0.0",
  "description": "Cultural AI Innovator portfolio showcasing cross-cultural technology solutions, VTuber AI development, and creative digital experiences",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "npm run build && netlify deploy --prod",
    "deploy:preview": "npm run build && netlify deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "lighthouse": "lighthouse https://pegearts.com --output html --output-path ./lighthouse-report.html",
    "analyze": "npm run build && npx bundle-analyzer dist",
    "clean": "rm -rf dist node_modules/.cache",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pigletpeakkung/YourTarot.git"
  },
  "homepage": "https://pegearts.com",
  "author": {
    "name": "Thanatsitt Santisamranwilai",
    "email": "thanattsitt.info@yahoo.co.uk",
    "url": "https://pegearts.com"
  },
  "license": "MIT",
  "keywords": [
    "portfolio",
    "cultural-ai",
    "ai-developer",
    "cross-cultural-technology",
    "vtuber-ai",
    "blockchain",
    "machine-learning",
    "creative-technology",
    "multilingual-ai",
    "pegearts",
    "three.js",
    "gsap",
    "tailwindcss",
    "webgl",
    "3d-portfolio"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "@types/three": "^0.158.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lighthouse": "^11.3.0",
    "lint-staged": "^15.1.0",
    "netlify-cli": "^17.10.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.6",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-pwa": "^0.17.4",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "gsap": "^3.12.2",
    "three": "^0.158.0",
    "aos": "^2.3.4",
    "lottie-web": "^5.12.2",
    "sweetalert2": "^11.10.1"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "netlify": {
    "build": {
      "command": "npm run build",
      "publish": "dist"
    },
    "redirects": [
      {
        "from": "/api/*",
        "to": "/.netlify/functions/:splat",
        "status": 200
      }
    ],
    "headers": [
      {
        "for": "/*",
        "values": {
          "X-Frame-Options": "DENY",
          "X-XSS-Protection": "1; mode=block",
          "X-Content-Type-Options": "nosniff"
        }
      }
    ]
  },
  "funding": {
    "type": "individual",
    "url": "https://pegearts.com/support"
  }
}
